  }
  function verificar5() {
  
    if (box7.value == "Dorivaldo" || box7.value == "Edilson" || box7.value == "Ladislau" || box7.value == "Marcos") {
      
      box7.innerText="Errado";
      box7.style.color="red"
      ponto.innerText="4 dac"
    } else {
      box7.innerText="Correto"
      box7.style.color="greenyellow "
      ponto.innerText="12 dac"
    }
  
  
  }
