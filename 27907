  function verificar1(){
    
    if(box3.value != "Dorivaldo" || box3.value != "Edilson" || box3.value != "Ladislau" || box3.value != "Marcos"){
      
      box3.innerText="Errado"
      box3.style.color="red"
      ponto.innerText="0 dac"
    }else{
      box3.innerText="Correto"
      box3.style.backgroundColor="greenyellow"
      ponto.innerText="2 dac"
      
   
    }
    
    
  }
  function verificar2() {
  
    if (box4.value  == "Dorivaldo" || box4.value == "Edilson" || box4.value == "Ladislau" || box4.value == "Marcos") {
     
      box4.innerText="Errado"
      box4.style.color="red"
      ponto.innerText="2 dac"
    } else {
      box4.innerText="Correto"
      box4.style.color="greenyellow "
      ponto.innerText="4 dac"
   
    }
  
  
  }
  function verificar3() {
  
    if (box5.value!= "Dorivaldo" || box5.value != "Edilson" || box5.value != "Ladislau" || box5.value != "Marcos") {
      
